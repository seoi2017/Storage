{
    "version": "0.1.0",
    "command": "g++",
    "args": ["-g", "${file}", "-o", "BASIC.exe","-static-libstdc++","-static-libgcc","-g3"],
    "isShellCommand": true,
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "showOutput": "always"
}